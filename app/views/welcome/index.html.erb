<div class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">MYB</h1>
    </div>
    <h3>Welcome to Manage Your Bills App</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper_html: { class: 'm-t' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email", class: "form-control" } %>
      <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password", class: "form-control" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary block full-width m-b" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
